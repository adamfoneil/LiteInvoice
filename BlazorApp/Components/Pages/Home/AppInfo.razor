@using Humanizer
@using Microsoft.Extensions.Options
@inject IOptions<DbConnection> DbConnectionOption

<div class="d-flex justify-content-center">
	<div class="d-flex align-items-center text-muted me-1">
		<div class="me-1">Built:</div>
		<div class="me-1" title="@BuildInfo.LocalBuildTime.Humanize()">@BuildInfo.LocalBuildTime</div>
		<div>@BuildInfo.Git.ShortCommitId</div>
	</div>
	<div class="mx-2">|</div>
	<div class="ms-1 text-muted">DbConnection = @DbConnectionOption.Value.ConnectionName</div>
</div>

